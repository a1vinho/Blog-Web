{{>menu}}
<main class="main-register flex w-full h-[calc(100vh-80px)] items-center justify-center">
    <div class="container-email bg-white flex flex-col gap-5 shadow-lg rounded-xl w-full max-w-md p-6">
        <!-- Cabeçalho -->
        <div class="header-container-email flex flex-col items-center border-b border-gray-200 pb-4">
            <h1 class="font-bold text-2xl text-gray-800">Adicione seu email</h1>
            <p class="text-sm text-gray-600">Recomendamos um email válido</p>
        </div>
        
        <!-- Formulário -->
        <form class="form-send-email flex flex-col gap-4">
            <!-- Campo de email -->
            <div class="flex flex-col gap-2">
                {{sessions.email}}
                <label for="email" class="text-gray-700 font-medium">Seu email</label>
                {{#if email}}
                        <input 
                        type="email" 
                        placeholder="Adicione seu email" 
                        id="email" 
                        class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent" value="{{email}}"
                    >
                {{else}}
                <input 
                    type="email" 
                    placeholder="Adicione seu email" 
                    id="email" 
                    class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-slate-900 focus:border-transparent"
                >
                {{/if}}
            </div>
            <!-- Botão -->
            <button type="submit" class="w-full p-3 bg-slate-900 text-white rounded-lg hover:bg-slate-800 transition duration-300 submit disabled:bg-gray-500">
                Continuar
            </button>
            <!-- Mensagem -->
            <p class="text-sm text-gray-600 text-center">
                Adicione um email válido, enviaremos uma verificação para o seu email.
            </p>
        </form>
        {{>loading}}
        <p class="text-response text-sm text-center hidden"></p>

        
    </div>
</main>
